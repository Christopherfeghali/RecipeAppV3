<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.recipeappv3.RecipeList">

    <Button
        android:id="@+id/DeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/RefreshButton"
        android:onClick="deleteRecipe"
        android:text="Delete" />

    <EditText
        android:id="@+id/DeleteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SearchButton"
        android:layout_alignStart="@+id/SearchText"
        android:ems="10"
        android:hint="Recipe to delete by ID"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/recipesTextView"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DeleteButton"
        android:layout_marginTop="33dp" />

</android.widget.RelativeLayout>
